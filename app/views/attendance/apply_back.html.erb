<h1 class="title"><%= @sub_content_title %></h1>
<div style="width:50%">
  <%= form_tag "/attendance/apply_back",:method=>'post' do %>
      <%= hidden_field_tag :id,@apply.id %>
      <div><div style="float:left">退回原因：</div><%= text_area_tag :back_reason, nil,:rows=>5,:cols=>50,:style=>"margin-left:10px;"%></div>
      <div style="clear:both"><%= submit_tag "提交", :class => "btn" %></div>
  <%end%>
</div>