<% recalls.each do |r|
  contact = r.contact %>
    <tr>
      <% if @show_firm_in_recall_list -%>
          <td><%= link_to_function r.firm.firm_name, "open_url('/#{params[:db_type]}/firm_show/#{r.firm_id}')" if r.firm -%></td>
      <% end -%>
      <td><%= link_to_function format_date(r.appt_date, :min), "open_url('/#{params[:db_type]}/recall_edit/#{r.id}')" %></td>
      <td><%= link_to_function contact.full_name(true, true), "open_url('/#{params[:db_type]}/contact_show/#{contact.id}')" if contact %></td>
      <td><%= r.contact_by_label %></td>
      <td><%= r.stage %></td>
      <td><%= r.employee.username %></td>
      <td><%= simple_format r.notes %></td>
      <% if @show_firm_in_recall_list -%>
          <td><%= link_to_function "完成", "finish_recall(#{r.id})" -%></td>
      <% end -%>
    </tr>
<% end %>
<script type="text/javascript">
    function finish_recall(rid) {
        $.ajax({
            type:"post",
            url:"/sales/recall_finish/" + rid,
            dataType:"json",
            success:function (data) {
                if (data.result == "success") {
                    alert(data.msg);
                    location.reload();
                }else{
                    alert(data.msg);
                }
            },
            error:function () {
                alert(data.msg);
            }
        });
    }
</script>