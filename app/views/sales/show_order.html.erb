<h1 class="title"><%= @title %></h1>
<table class="blue_tb">
  <tr>
    <th style="height: 38px;width: 240px;">公司名称</th>
    <td style="font-weight: bold; font-size:16px;margin: 5px;"><%= @order.firm.firm_name %></td>
  </tr>

  <tr>
    <th>订单金额</th>
    <td><%= number_with_delimiter(@order.total_amount, :local => :cn) -%>
      元
    </td>
  </tr>
  <tr>
    <th>到账日期</th>
    <td><%= @order.credited_date -%></td>
  </tr>
  <tr>
    <th>提成(员工，提成比例，金额)</th>
    <td>
      <ul style="list-style: none;margin-left: 0;" id="per">
        <% share_orders = @order.share_orders -%>
        <% unless share_orders.blank? -%>
        <% share_orders.each do |o| -%>
            <li>
              <%= o.employee.username -%>, <%= o.percentage -%>%, <%= o.money -%>元
            </li>
            <% end -%>
        <% end -%>
      </ul>
    </td>
  </tr>
  <tr>
    <th>备注</th>
    <td><%= @order.notes %></td>
  </tr>
</table>
