<h1 class="title"><%= @title %></h1>
<%= form_for :contact_position, :url => "/firm_types/add_position" do |f| -%>
    <%= errors_for @contact_position %>
    <table class="blue_tb">
      <tr>
        <th width=100>职业类型</th>
        <td width=230><%= f.select :firm_type_id, @firm_types, {:include_blank => true} %></td>
        <th width=100>名称</th>
        <td width=230><%= f.text_field :name %></td>
        <td colspan="4"><%= submit_tag "保存", :class => "btn btn-primary" %></td>
      </tr>
    </table>
<% end -%>
